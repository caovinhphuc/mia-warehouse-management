# ==================== MIA WAREHOUSE MANAGEMENT SYSTEM ====================
# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ==================== BACKEND (SERVERLESS) WITH SERVICE ACCOUNT ====================
# Service Account (serverless functions only â€” DO NOT expose on frontend)
GOOGLE_SA_CLIENT_EMAIL=
GOOGLE_SA_PRIVATE_KEY=

# Primary Spreadsheet ID used by serverless APIs
GOOGLE_SHEETS_ID=

# Optional: Parent Drive folder when creating new spreadsheets
GOOGLE_PARENT_FOLDER_ID=

# Logical sheet names
AUDIT_SHEET_NAME=AuditLog
USERS_SHEET_NAME=Users

# ==================== FRONTEND ====================
# Base URL for serverless API (on Vercel keep as /api)
REACT_APP_API_BASE_URL=/api

# Optional: Legacy direct access (kept for backward compatibility)
REACT_APP_GOOGLE_SHEETS_API_KEY=
REACT_APP_GOOGLE_SHEETS_ID=
REACT_APP_AUDIT_WEBHOOK_URL=
REACT_APP_PROFILE_UPDATE_WEBHOOK_URL=

# ==================== PRODUCTION SETTINGS ====================
# Application Environment
NODE_ENV=production

# Application URL (for Vercel deployment)
REACT_APP_BASE_URL=https://your-vercel-app-url.vercel.app

# ==================== OPTIONAL FEATURES ====================
# Enable debug mode
REACT_APP_DEBUG=false

# API timeout settings (milliseconds)
REACT_APP_API_TIMEOUT=10000

# Cache TTL (milliseconds)
REACT_APP_CACHE_TTL=300000

